<!-- FAVORITE JOBS  -->
<% @favorite_jobs.each do |favorite| %>
  <%= favorite.title %>
<% end %>
<!-- END FAVORITE JOBS -->

<% @jobs.each do |job| %>

  <%= job.title %>

  <% if current_user.role == 1 %>

    <% if !current_user.likes?(job) %>
      <%= link_to('Like', job_like_path(job), method: :post) %>
    <% else %>
      <%= link_to('Unlike', job_unlike_path(job), method: :post) %>
    <% end %>

  <% end %>

  <% if can? :read, job %>
    <%= link_to "See job", job_path(job.id) %>
  <% end %>

  <% if can? :update, job %>
    <%= link_to "Edit job", edit_job_path( job.id ) %>
  <% end %>

  <% if can? :destroy, job %>
    <%= link_to "Delete job", job, method: :delete, data: {confirm: "Do you wish to delete #{job.title}?"} %>
  <% end %>

  <% if can? :create, job %>
    <%= link_to "New job", new_job_path %>
  <% end %>

<% end %>
