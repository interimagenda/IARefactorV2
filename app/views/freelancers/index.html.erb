<!-- FAVORITES -->

<% @favorites.each do |favorite| %>
  <%= link_to favorite.first_name, freelancer_path(favorite.id) %>
<% end %>

<!-- END FAVORITES -->

<% @freelancers.each do |freelancer| %>

  <%= freelancer.email %>

  <% if !current_user.follows?(freelancer) %>
    <%= link_to('Follow', user_follow_path(freelancer), method: :post) %>
    <% else %>
    <%= link_to('Unfollow', user_unfollow_path(freelancer), method: :post) %>
  <% end %>

<% end %>
