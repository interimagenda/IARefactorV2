
<main>
  <div class="login-block">
    <!-- <img src="assets/img/logo.png" alt=""> -->
    <h1>Log in</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group">
        <div class="input-group">
          <%= f.label :email, class: "sr-only" %>
          <%= f.email_field :email, autofocus: true, placeholder: "Your e-mail", class: "form-control" %>
        </div>
      </div>

      <hr class="hr-xs">

      <div class="form-group">
        <div class="input-group">
          <%= f.label :password, class: "sr-only" %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Your password" %>
        </div>
      </div>

      <%= f.submit "Log in", class: "btn btn-primary btn-block" %>

      <div class="login-footer">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>

      <div class="login-links">
        <%= render "devise/shared/links" %>
      </div>

    <% end %>
  </div>



</main>
